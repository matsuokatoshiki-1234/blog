<h2>新規登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "名前を入力してください。", class: "form-control #{resource.errors.full_messages_for(:name).any? ? 'is-invalid' : ''}" %>
  <% if resource.errors.full_messages_for(:name).any? %>
  <% resource.errors.full_messages_for(:name).each do |error| %>
  <div>
    <small class="text-danger font-weight-bold">
      <%= error %>
    </small>
  </div>
  <% end %>
  <% end %>
</div>
<div class="form-group">
  <%= f.label :email %>
  <%= f.email_field :email, placeholder: "メールアドレスを入力してください。", class: "form-control #{resource.errors.full_messages_for(:email).any? ? 'is-invalid' : ''}" %>
  <% if resource.errors.full_messages_for(:email).any? %>
  <% resource.errors.full_messages_for(:email).each do |error| %>
  <div>
    <small class="text-danger font-weight-bold">
      <%= error %>
    </small>
  </div>
  <% end %>
  <% end %>
</div>
<div class="form-group">
  <%= f.label :password %>
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %>文字以上)</em>
  <% end %>
  <%= f.password_field :password, placeholder: "パスワードを入力してください。", class: "form-control #{resource.errors.full_messages_for(:password).any? ? 'is-invalid' : ''}" %>
  <% if resource.errors.full_messages_for(:password).any? %>
  <% resource.errors.full_messages_for(:password).each do |error| %>
  <div>
    <small class="text-danger font-weight-bold">
      <%= error %>
    </small>
  </div>
  <% end %>
  <% end %>
</div>
<div class="form-group">
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, placeholder: "もう一度パスワードを入力してください。", class: "form-control #{resource.errors.full_messages_for(:password_confirmation).any? ? 'is-invalid' : ''}" %>
  <% if resource.errors.full_messages_for(:password_confirmation).any? %>
  <% resource.errors.full_messages_for(:password_confirmation).each do |error| %>
  <div>
    <small class="text-danger font-weight-bold">
      <%= error %>
    </small>
  </div>
  <% end %>
  <% end %>
</div>
<div class="form-group">
  <%= f.submit "新規登録", class: "btn btn-primary" %>
</div>
<% end %>
<%= render "devise/shared/links" %>