<h2>パスワード再発行</h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<div class="form-group">
  <%= f.label :email %>
  <%= f.email_field :email, placeholder: "メールアドレスを入力してください。", class: "form-control #{resource.errors.full_messages_for(:email).any? ? 'is-invalid' : ''}" %>
  <% if resource.errors.full_messages_for(:email).any? %>
  <% resource.errors.full_messages_for(:email).each do |error| %>
  <div>
    <small class="text-danger font-weight-bold">
      <%= error %>
    </small>
  </div>
  <% end %>
  <% end %>
</div>
<div class="form-group">
  <%= f.submit "送信する", class: "btn btn-primary" %>
</div>
<% end %>
<%= render "devise/shared/links" %>