<h2>パスワードの変更</h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
<%= f.hidden_field :reset_password_token %>
<div class="form-group">
  <%= f.label :password, "新しいパスワード" %>
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %>文字以上)</em>
  <% end %>
  <%= f.password_field :password, placeholder: "パスワードを入力してください。", class: "form-control #{resource.errors.full_messages_for(:password).any? ? 'is-invalid' : ''}" %>
  <% if resource.errors.full_messages_for(:password).any? %>
  <% resource.errors.full_messages_for(:password).each do |error| %>
  <div>
    <small class="text-danger font-weight-bold">
      <%= error %>
    </small>
  </div>
  <% end %>
  <% end %>
</div>
<div class="form-group">
  <%= f.label :password_confirmation, "新しいパスワードの確認" %>
  <%= f.password_field :password_confirmation, placeholder: "もう一度パスワードを入力してください。", class: "form-control #{resource.errors.full_messages_for(:password_confirmation).any? ? 'is-invalid' : ''}" %>
  <% if resource.errors.full_messages_for(:password_confirmation).any? %>
  <% resource.errors.full_messages_for(:password_confirmation).each do |error| %>
  <div>
    <small class="text-danger font-weight-bold">
      <%= error %>
    </small>
  </div>
  <% end %>
  <% end %>
</div>
<div class="form-group">
  <%= f.submit "パスワードを変更する", class: "btn btn-primary" %>
</div>
<% end %>
<%= render "devise/shared/links" %>